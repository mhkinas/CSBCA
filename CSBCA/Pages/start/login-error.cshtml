@page
@model CSBCA.Pages.start.login_errorModel
@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSBCA SIGN IN</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/CSBCA/../css/bootstrap.css">
    <link rel="stylesheet" href="/CSBCA/../css/signin.css">
    <script src="/CSBCA/../js/jquery.min.js"></script>
    <script src="/CSBCA/../js/bootstrap.js"></script>
</head>
<body>

    <div class="container">
        <form id="giris" class="form-signin" method="post">
            <h2 class="form-signin-heading">User name or password is incorrect, try again!</h2>
            <br />
            <label for="login_name" class="sr-only"><b>User</b></label>
            <input type="text" name="login_name" class="form-control" placeholder="Enter user name..." required autofocus>

            <br />
            <label for="login_password" class="sr-only">Password</label>
            <input type="password" name="login_password" class="form-control" placeholder="Enter password..." required>
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <input type="hidden" name="lang" value="en">
        </form>
    </div>

    <div class="alert alert-warning">
        <strong>@HttpContext.Session.GetString("u_name")</strong>
        <!--if (HttpContext.Session.Getstring("error_string") != null)
        {-->
        @HttpContext.Session.GetString("error_string")

        @HttpContext.Session.GetString("sql_string")

        @if (HttpContext.Session.GetString("msg_string") != null)
        {
            HttpContext.Session.GetString("msg_string");
        }
    </div>
    <br /><br /><br /><br /><br /><br /><br />
    <footer class="container-fluid text-center">
        <p>&copy; Mehmet Hayati KINAŞ</p>
    </footer>

</body>
</html>
